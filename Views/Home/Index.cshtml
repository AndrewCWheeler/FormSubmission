@model User
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="my-5 mx-2">Enter your information</h1>
    <form class="form-group m-2" asp-action="Create" asp-asp-controller="Home" method="POST">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label d-none d-sm-block">First Name</label>
            <div class="col-sm-6">
                <input class="form-control form-control-lg" asp-for="FirstName" placeholder="First Name">
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label d-none d-sm-block">Last Name</label>
            <div class="col-sm-6">
                <input class="form-control form-control-lg" asp-for="LastName" placeholder="Last Name">
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label d-none d-sm-block">Age</label>
            <div class="col-sm-6">
                <input class="form-control form-control-lg" asp-for="Age" placeholder="Age">
                <span class="text-danger" asp-validation-for="Age"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label d-none d-sm-block">Email</label>
            <div class="col-sm-6">
                <input class="form-control form-control-lg" asp-for="Email" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label d-none d-sm-block" asp-for="Password">Password</label>
            <div class="col-sm-6">
                <input class="form-control form-control-lg" asp-for="Password" placeholder="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col text-center">
                <button class="btn btn-primary btn-lg my-2">Submit</button>
            </div>
        </div>
    </form>
</div>
